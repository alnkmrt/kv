<Page x:Class="WpfApp2.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1">
            <TextBlock Text="Авторизация" FontSize="18" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="Login" Margin="5,20,5,5"></TextBlock>
            <TextBox x:Name="LoginTB" Margin="5"></TextBox>
            <TextBlock Text="Password" Margin="5,20,5,5"></TextBlock>
            <PasswordBox x:Name="PasswordPB" Margin="5"></PasswordBox>
            <Button x:Name="LoginB" Content="Войти" HorizontalAlignment="Center" Margin="5" Click="LoginB_Click"></Button>


            <TextBlock Margin="10,55,10,5" Text="Клиент - логин-1, пароль-1"></TextBlock>
            <TextBlock Margin="5" Text="Менеджер - логин-2, пароль-2"></TextBlock>
            <TextBlock Margin="5" Text="Брокер - логин-3, пароль-3"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
